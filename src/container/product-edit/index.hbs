{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}
<main>
  <section>

    <div class='form'>
      <h1 class='form__title'>Інформація про товар</h1>

      <form method='POST' action='/product-edit'>
        {{#with data.product}}
          <div class='form__content'>
            <div class='form__block'>
              <div class='form__field'>
                <label for='name' class='form-label'>Назва
                  товару</label>
                <input
                  type='text'
                  name='name'
                  class='form-control'
                  value='{{name}}'
                />
              </div>
              <div class='form__field'>
                <label
                  for='price'
                  class='form-label'
                >Ціна</label>
                <input
                  type='number'
                  name='price'
                  step='0.01'
                  min='0'
                  class='form-control'
                  value='{{price}}'
                />
              </div>
              <div class='form__field'>
                <label
                  for='productID'
                  class='form-label'
                >ID</label>
                <input
                  type='number'
                  name='productID'
                  class='form-control'
                  value='{{id}}'
                  readonly
                />
              </div>
            </div>
            <div class='form__field'>
              <label
                for='description'
                class='form-label'
              >Короткий опис товару</label>
              <input
                type='text'
                name='description'
                class='form-control'
                value='{{description}}'
              />
            </div>
            <div class='form__coment'>Відображається у
              картці товару</div>
            <div class='form__block'>
              <button class='form__buttonSave'>Зберегти
                оновлення</button>
              <a
                href='/product-delete?id={{id}}'
                class='form__buttonDelete'
              >Видалити товар</a>
            </div>

          </div>
        {{/with}}
      </form>
    </div>

  </section>
</main>
